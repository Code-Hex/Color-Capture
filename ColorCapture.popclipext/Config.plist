<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Actions</key>
	<array>
		<dict>
			<key>Image File</key>
			<string>color.png</string>
			<key>Shell Script File</key>
			<string>launch.sh</string>
			<key>Title</key>
			<string>Color Capture</string>
		</dict>
	</array>
	<key>Extension Description</key>
	<string>Display the selected hex color value in small view.</string>
	<key>Extension Identifier</key>
	<string>com.codehex.popclip.extension.color-capture</string>
	<key>Extension Name</key>
	<string>Color Capture</string>
	<key>Regular Expression</key>
	<string>(^(#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3}))|((rgb|RGB)\( ?(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?) ?, ?){2}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\))$)</string>
</dict>
</plist>
